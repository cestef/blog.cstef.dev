---
import rawCopyButton from "../components/CopyButton.html?raw"
---

<article class="prose dark:prose-invert mx-auto lg:prose-lg" id="prose">
    <slot />
</article>

<script is:inline define:vars={{ rawCopyButton }}>
    // Add a copy button to each figure with data-copy attribute
    document.querySelectorAll('figure[data-copy]').forEach((figure) => {
        figure.style.position = 'relative'
        const button = document.createElement('button')
        figure.appendChild(button)
        button.outerHTML = rawCopyButton
    })
</script>